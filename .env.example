# =============================================================================
# CONFIGURATION DELAY FORECAST
# =============================================================================
# Copier ce fichier vers .env et renseigner les valeurs

# -----------------------------------------------------------------------------
# Base de donnees (Neon PostgreSQL) - OBLIGATOIRE
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://<user>:<password>@<host>.neon.tech/<database>?sslmode=require

# -----------------------------------------------------------------------------
# Airflow
# -----------------------------------------------------------------------------
# Generer avec: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=

# Generer avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
AIRFLOW_WEBSERVER_SECRET_KEY=

AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# MLflow
# -----------------------------------------------------------------------------
MLFLOW_BACKEND_STORE_URI=sqlite:////mlflow/mlflow.db
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow/artifacts

# -----------------------------------------------------------------------------
# AWS S3 (Data Lake) - Optionnel pour le POC
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
S3_BUCKET=

# -----------------------------------------------------------------------------
# Evidently Monitoring
# -----------------------------------------------------------------------------
DRIFT_THRESHOLD=0.1
ALERT_WEBHOOK_URL=